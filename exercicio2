#include <stdio.h>

int main(){
	
	float nota1, nota2, media;
	
	printf("Informe sua primeira nota: ");
	scanf("%f", &nota1);
	
	printf("\nInforme sua segunda nota:");
	scanf("%f", &nota2);
	
	media = (nota1 + nota2) /2;
	
	printf("\nSua media eh %.1f\n", media);
	
	if (media >= 7.0){
		
		printf("APROVADO");
		
	}else {
		
		printf("REPROVADO");
	}
		
	return 0;
}
